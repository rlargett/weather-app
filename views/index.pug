doctype html
html
    head
        meta(charset='utf-8')
        title Test
        link(rel='stylesheet', href='/css/style.css')
        
    body
        .container
            fieldset
                form(action='/' method='POST')
                    input.ghost-input(name='city', type='text', placeholder='Enter a City', required)
                    input.ghost-button(type='submit', value='Get Weather')
                if weather
                    p= weather
                if error
                    p= error